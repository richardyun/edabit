// INSTRUCTIONS: Create a function that filters out an array of state names into two categories based on the second parameter.

// 1. Abbreviations abb
// 2. Full names full

function filterStateNames(arr, type) {
	if (type === "abb") {
    return arr.filter(x => x.length === 2);
  }
  if (type === "full") {
    return arr.filter(x => x.length > 2);
  }
}