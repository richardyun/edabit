// INSTRUCTIONS: Create a function which returns the word in the string, but with all the fog letters removed. However, if the string is clear from fog, return "It's a clear day!".

function clearFog(str) {
	const regex = /[FfOoGg]/g;
  if (regex.test(str)) {
    return str.replace(regex, '');
  } else return "It's a clear day!"
}